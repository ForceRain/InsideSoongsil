<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:screenOrientation="landscape"
    tools:context="com.jw.graker.EditMainActivity" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/listFragment"
            android:name="com.jw.graker.FragmentList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/imageFragment"
            android:name="com.jw.graker.FragmentImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/editTitleBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/button_edittitle_aqua" />

        <ImageButton
            android:id="@+id/editDataBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/button_editdata_aqua" />

        <ImageButton
            android:id="@+id/editDeleteBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/button_delete" />
    </LinearLayout>

</LinearLayout>